generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cart      Cart?    
}


enum Category {
  ELETRONICOS
  ROUPAS
  ACESSORIOS
  LIVROS
  JOGOS
  OUTROS
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int
  category    Category    @default(OUTROS)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  CartItem    CartItem[]
}

model Cart {
  id        Int        @id @default(autoincrement())
  total     Float      @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     CartItem[]
  user      User?      @relation(fields: [userId], references: [id])
  userId    Int?       @unique 
}

model CartItem {
  id        Int      @id @default(autoincrement())
  quantity  Int
  price     Float
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
} 